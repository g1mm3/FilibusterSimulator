<Window x:Class="FilibusterSimulator.GameWindows.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilibusterSimulator.GameWindows"
        mc:Ignorable="d"
        Title="ConfirmWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="tblText" FontSize="15" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" Text="" Grid.ColumnSpan="2"/>
        <Button IsDefault="True" x:Name="btnYes" Content="Да" FontSize="20" Margin="30,20" Grid.Row="1" Grid.Column="0" Click="BtnYes_Click" />
        <Button IsCancel="True" x:Name="btnNo" Content="Нет" FontSize="20" Margin="30,20" Grid.Row="1" Grid.Column="1" />
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
