<Window x:Class="FilibusterSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilibusterSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Симулятор Флибустьера" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" />
        <Image x:Name="imgPirateFlag" Height="150" HorizontalAlignment="Center" Grid.Row="1"  />
        <Button x:Name="btnStartGame" Content="Начать игру" Margin="10" Grid.Row="2" Click="BtnStartGame_Click" />
        <Button x:Name="btnLoadGame" Content="Загрузить игру" Margin="10" Grid.Row="3" Click="BtnLoadGame_Click" />
        <Button x:Name="btnExitGame" Content="Выйти из игры" Margin="10" Grid.Row="4" Click="BtnExitGame_Click" />
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="200" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
    </Grid>
</Window>
